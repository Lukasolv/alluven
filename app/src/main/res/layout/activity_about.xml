<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F1FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5B3AA6"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Sobre Nós"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_white"
                android:text="O Alluven foi criado para facilitar a vida de salões, profissionais da beleza e clientes. Organizamos agendamentos, divulgamos cursos e garantimos mais autonomia para que cada pessoa possa marcar, remarcar ou cancelar horários direto pelo celular, com praticidade e segurança."
                android:padding="16dp"
                android:elevation="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_white"
                android:text="Este projeto foi realizado na disciplina Projeto Integrador: Sistemas para Dispositivos Móveis, do curso de Sistemas de Informação do SENAC, sob orientação do Prof. Me. Ozias Gonçalves dos Santos."
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvedores"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#5B3AA6"
                android:layout_marginTop="16dp"/>

            <!-- Linha dos 3 cards de devs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="3"
                android:gravity="center">

                <!-- Cada filho ocupa 1/3 e tem margem lateral para simular space_evenly -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#5B3AA6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fernando\nSouza"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#5B3AA6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lukas\nCosta"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#5B3AA6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Borys\nEver"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSenac"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="SENAC"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_pill"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
