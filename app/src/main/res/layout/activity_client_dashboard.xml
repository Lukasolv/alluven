<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- top bar roxa com hambÃºrguer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5B3AA6"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="ALLUVEN"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F1FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#5B3AA6">

                <!-- TODO: banner -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="24dp"
                    android:text="Realce sua\nbeleza"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAgendarHero"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="24dp"
                    android:text="Agendar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_pill"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nossos Procedimentos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="#2E2E2E"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="4"
                android:gravity="center">

                <!-- 4 miniaturas -->
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/card_white" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/card_white" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/card_white" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/card_white" android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
