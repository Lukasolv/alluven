<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_topbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/aw_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/aw_purple">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="24dp"
                    android:text="Realce sua\nbeleza"
                    android:textColor="@color/aw_white"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAgendarHero"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="24dp"
                    android:text="Agendar"
                    android:textAllCaps="false"
                    android:textColor="@color/aw_white"
                    android:background="@drawable/bg_button_primary"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nossos Procedimentos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="@color/aw_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="4"
                android:gravity="center">


                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/bg_card_soft" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/bg_card_soft" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/bg_card_soft" android:padding="8dp"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:src="@android:drawable/ic_menu_gallery" android:background="@drawable/bg_card_soft" android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
