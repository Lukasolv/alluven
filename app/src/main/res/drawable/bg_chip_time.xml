<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aw_purple"/>
            <corners android:radius="20dp"/>
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/aw_white"/>
            <stroke android:width="1dp" android:color="@color/aw_purple_light"/>
            <corners android:radius="20dp"/>
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp"/>
        </shape>
    </item>
</selector>
