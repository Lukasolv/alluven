<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/aw_purple"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/aw_white"/>
            <stroke android:width="2dp" android:color="@color/aw_purple_light"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>
